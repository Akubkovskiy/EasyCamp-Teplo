# Пример файла .env
# Скопируйте этот файл в .env и заполните своими значениями

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_FILE=google-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./easycamp.db

# Project Identity (SaaS Config)
PROJECT_NAME="Teplo"
PROJECT_LOCATION="Arkhyz"
PROJECT_ADDRESS="KCR, Arkhyz, Lesnaya st. 1"
PROJECT_COORDS="43.560731, 41.284236"

# Contact Information
CONTACT_PHONE="+7 (925) 127-97-22"
CONTACT_ADMIN_USERNAME="@Alexey_kubkovskiy"
CONTACT_EMAIL="teploarkhyz@gmail.com"
CONTACT_WORK_HOURS="Круглосуточно"
CONTACT_WEBSITE=""

# Payment Information
PAYMENT_RECEIVER="Сергей Иванович П."
PAYMENT_METHODS="Сбер/Тинькофф"

# Avito API
# Get these from Avito integrations page integration.avito.ru
AVITO_CLIENT_ID=your_client_id_here
AVITO_CLIENT_SECRET=your_client_secret_here
AVITO_ITEM_IDS=item_id:house_id,item_id:house_id
# Example: AVITO_ITEM_IDS=4719983476:3,3792037514:2,3728151166:1
# Format: avito_item_id:house_id (1=Teplo 1, 2=Teplo 2, 3=Teplo 3)
# Note: Get these from Avito integrations page, not OAuth app

# Scheduler settings
ENABLE_AUTO_SYNC=true
AVITO_SYNC_INTERVAL_MINUTES=30
SHEETS_SYNC_INTERVAL_MINUTES=5

# Sync Behavior
SYNC_ON_BOT_START=true
SYNC_ON_USER_INTERACTION=true
SYNC_CACHE_TTL_SECONDS=30

# Avito calendar settings (на сколько дней вперед открыты брони)
BOOKING_WINDOW_DAYS=180

# Webhook Security
# Mode: "off" = no verification, "warn" = log warning but allow, "enforce" = reject invalid
AVITO_WEBHOOK_MODE=warn
# HMAC secret for signature verification (if empty, behaves as "off" mode)
AVITO_WEBHOOK_SECRET=

# Rate Limiting
# Enable/disable rate limiting (killswitch for quick disable behind proxy issues)
RATE_LIMIT_ENABLED=true
# Format: "N/period" where period is second, minute, hour, day
RATE_LIMIT_WEBHOOK=30/minute

# Logging
# Format: "console" (default) or "json" (for production/ELK)
LOG_FORMAT=console
# Threshold in ms to log slow requests. Default: 500
LOG_SLOW_REQUEST_THRESHOLD_MS=500