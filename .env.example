# Пример файла .env
# Скопируйте этот файл в .env и заполните своими значениями

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_FILE=google-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Avito (опционально)
AVITO_CLIENT_ID=your_avito_client_id_here
AVITO_CLIENT_SECRET=your_avito_client_secret_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./easycamp.db

# Contact Information
CONTACT_PHONE=+79251279722
CONTACT_TELEGRAM=@Alexey_kubkovskiy
CONTACT_EMAIL=teploarkhyz@gmail.com
CONTACT_ADDRESS=Карачаево-Черкесия, Архыз

# Avito API
AVITO_CLIENT_ID=your_client_id_here
AVITO_CLIENT_SECRET=your_client_secret_here
AVITO_ITEM_IDS=item_id:house_id,item_id:house_id
# Example: AVITO_ITEM_IDS=4719983476:3,3792037514:2,3728151166:1
# Format: avito_item_id:house_id (1=Teplo 1, 2=Teplo 2, 3=Teplo 3)
# Note: Get these from Avito integrations page, not OAuth app

# Scheduler settings
ENABLE_AUTO_SYNC=true
AVITO_SYNC_INTERVAL_MINUTES=30
SHEETS_SYNC_INTERVAL_MINUTES=5
